<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    tools:context=".AddExpense">

     <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:elevation="4dp"
                android:id="@+id/toolbaradd"
                app:title="Add Expense"
                android:clickable="true"
                app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
         android:focusable="true">
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:text="@string/save"
            android:layout_alignParentEnd="true"
            android:focusable="true" />
      </androidx.appcompat.widget.Toolbar>

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/with_you_and"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/contactAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:completionHint="@string/enter_a_contact"
        android:completionThreshold="0"
        android:ems="10"
        android:hint="@string/enter_a_contact" />
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_add"/>


    <!-- Hidden Contact Details-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/hidden1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

        <ImageView
            android:id="@+id/hidden1_image"
            android:layout_toRightOf="@+id/hidden1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />

    <TextView
        android:id="@+id/hidden2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
        <ImageView
            android:id="@+id/hidden2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />
    <TextView
        android:id="@+id/hidden3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
        <ImageView
            android:id="@+id/hidden3_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />
    <TextView
        android:id="@+id/hidden4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
        <ImageView
            android:id="@+id/hidden4_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />
    </RelativeLayout>
    <!-- Hidden Contact Details-->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@android:drawable/ic_menu_sort_by_size"
        android:ems="10"
        android:hint="@string/enter_a_description"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/dollar"
        android:ems="10"
        android:hint="@string/_0_00"
        android:importantForAutofill="no"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split:"
        android:textSize="20sp" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/equally"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="makeInVisible"
            android:text="Equally"/>

        <RadioButton
            android:id="@+id/unequally"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unequally"
            android:onClick="makeVisible"/>

    </RadioGroup>
<!--HIDDEN-->
  <TextView
      android:id="@+id/your_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:visibility="gone"
        android:text="Enter your share:"/>
    <EditText
        android:id="@+id/et_your_share"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:inputType="number"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/friend_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Enter friends share:"/>
    <EditText
        android:id="@+id/et_friend_share"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:inputType="number"

        android:layout_height="wrap_content"
        />
    <!--HIDDEN-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split"
        android:onClick="send"
        />

</LinearLayout>